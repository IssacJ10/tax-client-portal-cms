{
  "kind": "collectionType",
  "collectionName": "trust_filings",
  "info": {
    "singularName": "trust-filing",
    "pluralName": "trust-filings",
    "displayName": "Trust Filing (T3)",
    "description": "Trust tax filing data for T3 returns"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "filing": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::filing.filing",
      "mappedBy": "trustFiling"
    },
    "trustName": {
      "type": "string",
      "required": false
    },
    "accountNumber": {
      "type": "string",
      "required": false
    },
    "creationDate": {
      "type": "date"
    },
    "residency": {
      "type": "string"
    },
    "trustees": {
      "type": "json"
    },
    "beneficiaries": {
      "type": "json"
    },
    "income": {
      "type": "json"
    },
    "formData": {
      "type": "json"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "DRAFT",
        "COMPLETED",
        "FLAGGED",
        "VERIFIED"
      ],
      "default": "DRAFT"
    }
  }
}