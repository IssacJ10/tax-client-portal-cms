{
    "kind": "collectionType",
    "collectionName": "tax_years",
    "info": {
        "singularName": "tax-year",
        "pluralName": "tax-years",
        "displayName": "Tax Year",
        "description": "Configure tax seasons"
    },
    "options": {
        "draftAndPublish": false
    },
    "pluginOptions": {
        "content-manager": {
            "visible": true,
            "mainField": "year"
        }
    },
    "attributes": {
        "year": {
            "type": "string",
            "required": true,
            "unique": true,
            "regex": "^[0-9]{4}$"
        },
        "isActive": {
            "type": "boolean",
            "default": false
        },
        "isCurrent": {
            "type": "boolean",
            "default": false
        },
        "filingDeadline": {
            "type": "date"
        },
        "instructions": {
            "type": "richtext"
        },
        "filingQuestions": {
            "type": "json"
        },
        "filings": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::filing.filing",
            "mappedBy": "taxYear"
        }
    }
}