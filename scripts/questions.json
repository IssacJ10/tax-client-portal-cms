{
    "title": "{year} Income Tax Return",
    "pages": [
        {
            "id": "personal_identity",
            "title": "Personal Identity",
            "description": "Please provide your personal identity details.",
            "fields": [
                {
                    "name": "personalInfo.firstName",
                    "label": "Given Name (First Name)",
                    "type": "text",
                    "required": true
                },
                {
                    "name": "personalInfo.middleName",
                    "label": "Middle Name",
                    "type": "text",
                    "required": false
                },
                {
                    "name": "personalInfo.lastName",
                    "label": "Surname (Last Name)",
                    "type": "text",
                    "required": true
                },
                {
                    "name": "personalInfo.sin",
                    "label": "SIN Number",
                    "type": "text",
                    "required": true
                },
                {
                    "name": "personalInfo.dateOfBirth",
                    "label": "Date of birth",
                    "type": "date",
                    "required": true
                },
                {
                    "name": "personalInfo.isFirstTimeFiler",
                    "label": "Are you filing an Income Tax Return with the CRA for the first time?",
                    "type": "radio",
                    "options": [
                        "Yes",
                        "No"
                    ],
                    "required": true
                },
                {
                    "name": "personalInfo.maritalStatus",
                    "label": "Marital Status",
                    "type": "select",
                    "options": [
                        "Married",
                        "Single",
                        "Common-law",
                        "Separated",
                        "Divorced",
                        "Widowed"
                    ],
                    "required": true
                },
                {
                    "name": "personalInfo.maritalStatusChanged",
                    "label": "Did your Marital Status changed in {year}",
                    "type": "radio",
                    "options": [
                        "Yes",
                        "No"
                    ],
                    "required": true
                },
                {
                    "name": "personalInfo.maritalStatusChangeDate",
                    "label": "Date of Martial status change",
                    "type": "date",
                    "required": false
                }
            ]
        },
        {
            "id": "personal_contact",
            "title": "Contact Information",
            "description": "Please provide your contact details.",
            "fields": [
                {
                    "name": "personalInfo.email",
                    "label": "Email",
                    "type": "email",
                    "required": true
                },
                {
                    "name": "personalInfo.phoneNumber",
                    "label": "Phone number",
                    "type": "tel",
                    "required": true
                },
                {
                    "name": "personalInfo.currentAddress",
                    "label": "Current Address",
                    "type": "text",
                    "required": true
                },
                {
                    "name": "personalInfo.city",
                    "label": "City",
                    "type": "text",
                    "required": true
                },
                {
                    "name": "personalInfo.postalCode",
                    "label": "Postal Code",
                    "type": "text",
                    "required": true
                },
                {
                    "name": "personalInfo.province",
                    "label": "Select a Province or Territory",
                    "type": "select",
                    "options": [
                        "Alberta",
                        "British Columbia",
                        "Manitoba",
                        "New Brunswick",
                        "Newfoundland and Labrador",
                        "Nova Scotia",
                        "Ontario",
                        "Prince Edward Island",
                        "Quebec",
                        "Saskatchewan",
                        "Northwest Territories",
                        "Nunavut",
                        "Yukon"
                    ],
                    "required": true
                }
            ]
        },
        {
            "id": "financial_other",
            "title": "Additional Information",
            "description": "Please provide employment and residency details.",
            "fields": [
                {
                    "name": "personalInfo.employmentStatus",
                    "label": "Employment Status",
                    "type": "select",
                    "options": [
                        "Employed (Full-time/Part-time)",
                        "Self-employed",
                        "Temporary/Contract Work",
                        "Corporation",
                        "Unemplyeed"
                    ],
                    "required": true
                },
                {
                    "name": "personalInfo.employerDetails",
                    "label": "If you selected 'Employed', please provide details of your employer",
                    "type": "text",
                    "required": false
                },
                {
                    "name": "personalInfo.residencyStatus",
                    "label": "Canadian Residency Status",
                    "type": "select",
                    "options": [
                        "Citizen",
                        "Permanent Resident",
                        "Work Permit",
                        "Refugee",
                        "Student"
                    ],
                    "required": true
                },
                {
                    "name": "personalInfo.movedInYear",
                    "label": "Did you move in {year}?",
                    "type": "radio",
                    "options": [
                        "Yes",
                        "No"
                    ],
                    "required": true
                },
                {
                    "name": "personalInfo.previousAddress",
                    "label": "Previous Address (If moved in {year})",
                    "type": "text",
                    "required": false
                },
                {
                    "name": "personalInfo.arrivalDate",
                    "label": "If you came to Canada in {year}, Please specify the date of your arrival",
                    "type": "date",
                    "required": false
                },
                {
                    "name": "personalInfo.workedOutsideCanada",
                    "label": "If you arrived in Canada in {year}, did you work (in person or remotely) in any country besides Canada?",
                    "type": "radio",
                    "options": [
                        "Yes",
                        "No"
                    ],
                    "required": true
                },
                {
                    "name": "personalInfo.amountOutsideCanada",
                    "label": "Enter Amount (in CAD)",
                    "type": "number",
                    "required": false
                },
                {
                    "name": "personalInfo.directDeposit",
                    "label": "Complete this session if you would like Canada Revenue Agency (CRA) to deposit any amounts payable to you directly into your bank account.",
                    "type": "radio",
                    "options": [
                        "Yes",
                        "No"
                    ],
                    "required": true
                }
            ]
        },
        {
            "id": "family_selection",
            "title": "Family Information",
            "description": "Please indicate if you are filing for a spouse or dependents.",
            "fields": [
                {
                    "name": "personalInfo.hasFamilyMembers",
                    "label": "Do you have any of the following",
                    "type": "radio",
                    "options": [
                        "Spouse (Even Outside Canada)",
                        "Dependents",
                        "Both",
                        "None"
                    ],
                    "required": true
                }
            ]
        },
        {
            "id": "spouse",
            "title": "Spouse Details",
            "description": "Please details about your spouse.",
            "conditionalOn": {
                "field": "personalInfo.hasFamilyMembers",
                "values": [
                    "Spouse (Even Outside Canada)",
                    "Both"
                ]
            },
            "fields": [
                {
                    "name": "spouse.residencyStatus",
                    "label": "Canadian Residency Status Of Spouse",
                    "type": "radio",
                    "options": [
                        "Resident",
                        "Non-Resident"
                    ],
                    "required": true
                },
                {
                    "name": "spouse.firstName",
                    "label": "Given Name (Spouse)",
                    "type": "text",
                    "required": true
                },
                {
                    "name": "spouse.middleName",
                    "label": "Middle Name (Spouse)",
                    "type": "text",
                    "required": false
                },
                {
                    "name": "spouse.lastName",
                    "label": "Surname (Spouse)",
                    "type": "text",
                    "required": true
                },
                {
                    "name": "spouse.dateOfBirth",
                    "label": "Date of Birth (Spouse)",
                    "type": "date",
                    "required": true
                },
                {
                    "name": "spouse.netIncome",
                    "label": "Net Income (Spouse)",
                    "type": "number",
                    "required": false
                }
            ]
        },
        {
            "id": "dependents",
            "title": "Dependents",
            "description": "Please provide details for your dependents.",
            "conditionalOn": {
                "field": "personalInfo.hasFamilyMembers",
                "values": [
                    "Dependents",
                    "Both"
                ]
            },
            "fields": [
                {
                    "name": "dependents.count",
                    "label": "Number of dependents",
                    "type": "select",
                    "options": [
                        "1",
                        "2",
                        "3",
                        "4",
                        "5"
                    ],
                    "required": true
                },
                {
                    "name": "dependents.list",
                    "type": "repeater",
                    "countField": "dependents.count",
                    "fields": [
                        {
                            "name": "firstName",
                            "label": "Given Name (first name)",
                            "type": "text",
                            "required": true
                        },
                        {
                            "name": "middleName",
                            "label": "Middle Name",
                            "type": "text",
                            "required": false
                        },
                        {
                            "name": "lastName",
                            "label": "Surname (last name)",
                            "type": "text",
                            "required": true
                        },
                        {
                            "name": "dateOfBirth",
                            "label": "Date of Birth",
                            "type": "date",
                            "required": true
                        },
                        {
                            "name": "sin",
                            "label": "SIN",
                            "type": "text",
                            "required": true
                        },
                        {
                            "name": "relationship",
                            "label": "Relationship",
                            "type": "text",
                            "required": true
                        }
                    ]
                }
            ]
        },
        {
            "id": "deductions",
            "title": "Deductions & Credits",
            "description": "Please indicate any deductions you wish to claim.",
            "fields": [
                {
                    "name": "personalInfo.medicalExpenses",
                    "label": "Did you pay for any health/medical/prescribed medication/dental work expenses not covered by your health/medical insurance in {year}?",
                    "type": "radio",
                    "options": [
                        "Yes",
                        "No"
                    ],
                    "required": false
                },
                {
                    "name": "personalInfo.donations",
                    "label": "Did you make any donations to a charitable organization (e.g. church, NGO, etc.) in {year}?",
                    "type": "radio",
                    "options": [
                        "Yes",
                        "No"
                    ],
                    "required": false
                },
                {
                    "name": "personalInfo.rrsp",
                    "label": "Did you buy registered retirement savings plan (RRSP) in {year}?",
                    "type": "radio",
                    "options": [
                        "Yes",
                        "No"
                    ],
                    "required": false
                },
                {
                    "name": "personalInfo.workFromHome",
                    "label": "Do you work from home?",
                    "type": "radio",
                    "options": [
                        "Yes",
                        "No"
                    ],
                    "required": false
                }
            ]
        },
        {
            "id": "doc_selection",
            "title": "Document Selection & Upload",
            "description": "Please select and upload the documents you have available.",
            "fields": [
                {
                    "name": "personalInfo.taxSlips",
                    "label": "Select The Tax Slips That Available To You in {year}",
                    "type": "checkbox",
                    "options": [
                        "T2202 – Tuition and education credits",
                        "T4 -Employment income",
                        "T4A -Self-employment, pension, or other income",
                        "T4E -Employment Insurance (EI) benefits",
                        "T4A(P) – Canada Pension Plan (CPP) benefits",
                        "T5 – Investment income (interest, dividends)",
                        "T4RSP – RRSP withdrawals",
                        "RC62 – Universal Child Care Benefit (if applicable)",
                        "T3 – Income from trusts or mutual funds",
                        "T5007 – Social assistance or worker's compensation benefits",
                        "T5013 – Partnership income",
                        "Business or rental income (financial statements, invoices, receipts)",
                        "T4A(OAS) – Old Age Security (OAS) benefits",
                        "Disability Tax credit T2201",
                        "No Income"
                    ],
                    "required": false
                },
                {
                    "name": "personalInfo.additionalDocs",
                    "label": "Please E-mail me, if any of the following documents are available",
                    "type": "checkbox",
                    "options": [
                        "Rental Income",
                        "Investment or Capital Gain/Loss",
                        "Foreign Income & Assets",
                        "Property Tax/Rent Receipts",
                        "Any Other Employment Expenses",
                        "Child Care Receipts"
                    ],
                    "required": false
                },
                {
                    "name": "personalInfo.uploadedFiles",
                    "label": "Upload All Available Slips Above",
                    "type": "file",
                    "required": false
                }
            ]
        },
        {
            "id": "review",
            "title": "Review Your Filing",
            "description": "Please review your information, then submit your return.",
            "fields": []
        }
    ]
}